  <div class="flex flex-col items-center" id="<%= dom_id post %>">
    <p class="my-2">
      <strong class="block font-lg mb-1 italic"><%= post.title %></strong>
    </p>

    <p class="my-2 mx-auto">
      <%= post.content %>
    </p>

    <p class="my-1">
      <strong><%= pluralize post.comments.count, "comment" %></strong>
    </p>

    <p class="my-1">
      Posted <%= time_tag post.created_at, "data-local": "time-ago" %>
    </p>
  </div>